{

  "manifest_version": 2,
  "name": "Clarity",
  "version": "1.0",

  "description": "Clean out the distracting clutter on youtube",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["clarity.css"]
    }
  ],

  "applications": {
    "gecko": {
      "id": "borderify@example.com",
      "strict_min_version": "42.0",
      "strict_max_version": "50.*",
      "update_url": "https://example.com/updates.json"
    }
  }

}
